<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blur"
    android:orientation="vertical"
    android:padding="20sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <Button
            android:id="@+id/btn_products"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="@dimen/dashboardMargin"
            android:layout_marginTop="140sp"
            android:layout_weight="1"
            android:background="@drawable/bg"
            android:drawableTop="@drawable/productsne"
            android:focusable="false"
            android:text="Products"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/btn_flights"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="@dimen/dashboardMargin"
            android:layout_marginTop="140sp"
            android:layout_weight="1"
            android:background="@drawable/bg"
            android:drawableTop="@drawable/flightnew"
            android:focusable="false"
            android:text="Flights"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="serif" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_weight="1">


        <Button
            android:id="@+id/btn_hotels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="140sp"
            android:layout_marginLeft="@dimen/dashboardMargin"
            android:layout_marginTop="3sp"
            android:layout_weight="1"
            android:background="@drawable/bg"
            android:drawableTop="@drawable/hotelnew"
            android:focusable="false"
            android:text="Hotels"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="serif"></Button>


        <Button
            android:id="@+id/btn_places"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="140sp"
            android:layout_marginLeft="@dimen/dashboardMargin"
            android:layout_marginTop="3sp"
            android:layout_weight="1"
            android:background="@drawable/bg"
            android:drawableTop="@drawable/servicesnew"
            android:focusable="false"
            android:text="Services"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="serif" />


    </LinearLayout>


</LinearLayout>