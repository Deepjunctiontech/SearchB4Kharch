<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup_layout_id"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="@dimen/signup_padding"
    tools:context="in.junctiontech.searchb4kharch.SignupActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:visibility="invisible" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_signup_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_signup_fname"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/oll_margin"
                android:layout_marginRight="@dimen/oll_margin"
                android:layout_marginBottom="8sp"

                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_signup_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_signup_lname"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/oll_margin"
                android:layout_marginRight="@dimen/oll_margin"
                android:layout_marginBottom="8sp"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_signup_emailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_signup_emailid"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/oll_margin"
                android:layout_marginRight="@dimen/oll_margin"
                android:layout_marginBottom="8sp"
                android:ems="10"
                android:hint="Email Id"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_signup_password"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/oll_margin"
                android:layout_marginRight="@dimen/oll_margin"
                android:layout_marginBottom="8sp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textVisiblePassword"
                android:maxLength="10" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_signup_mobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_signup_mobileno"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/oll_margin"
                android:layout_marginRight="@dimen/oll_margin"
                android:layout_marginBottom="8sp"
                android:ems="10"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_gravity="center"
                android:id="@+id/text_signup_dob"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:focusableInTouchMode="false"
                    android:id="@+id/edit_signup_dob"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/oll_margin"
                    android:layout_marginRight="@dimen/oll_margin"
                    android:layout_marginBottom="8sp"
                    android:ems="10"
                    android:hint="Date Of Birth"
                    android:inputType="number"
                    android:maxLength="10" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_weight="5"
                android:id="@+id/btn_signup_dob"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="getDOBOnClick"
                android:text="DOB"
                android:textColor="@color/colorPrimaryDark" />




        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView

                android:layout_margin="@dimen/oll_margin"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Gender"
                android:gravity="left"
                android:layout_weight="1"
                />

           <!-- <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1">

            <RadioButton
                android:onClick="genderChecked"
                android:checked="true"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:text="Male"
                android:textSize="10sp"
                android:textColor="#0d0c0c"  />-->

                <RadioGroup
                    android:id="@+id/genderRadioGroup"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/genderMale"
                        android:onClick="genderChecked"
                        android:checked="true"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_gravity="center"
                        android:text="Male"
                        android:textSize="10sp"
                        android:textColor="#0d0c0c"
                        />
                    <RadioButton
                        android:onClick="genderChecked"
                        android:id="@+id/genderFemale"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_gravity="center"
                        android:text="Female"
                        android:textSize="10sp"
                        android:textColor="#0d0c0c"  />



                </RadioGroup>

       <!--         <RadioButton
                android:onClick="genderChecked"
                android:layout_weight="1"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:text="Female"
                android:textSize="10sp"
                android:textColor="#0d0c0c" />

            </RadioGroup>-->

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_signup_signup"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_button"
            android:onClick="signupOnClick"
            android:text="Signup"
            android:textColor="#ffffff" />



    </LinearLayout>


</ScrollView>

